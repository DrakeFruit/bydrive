@using Sandbox.UI;

@page "/lobbies";
@attribute [StyleSheet("/Menu/MultiPlayerPage.razor.scss")]
@namespace Bydrive

<root class="flex-col w-100 h-100">
    <div class="main">
        @if(lobbies != null)
        {
            @foreach (var lobby in lobbies)
            {
                <div class="lobby pointer-events" @onclick=@(() => OnClickLobby(lobby))>
                    <label class="name">@lobby.Name</label>
                    <label class="owner">@(new Friend((long)lobby.OwnerId).Name)</label>
                    <div class="status">
                        <label class="players">@lobby.Members/@lobby.MaxMembers</label>
                    </div>
                </div>
            }
        }
    </div>
    <div class="footer">
        <div class="button" @onclick=@OnClickBack>Back</div>
        <div class="button" @onclick=@OnClickRefresh>Refresh</div>
        <div class="button" @onclick=@OnClickCreate>Create</div>
    </div>
</root>